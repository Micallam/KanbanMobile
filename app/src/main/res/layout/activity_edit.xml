<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/old_password_label"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Aktualne hasło:"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="75dp" />

    <EditText
        android:id="@+id/old_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/old_password_label"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/new_password_label"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/old_password"
        android:text="Nowe hasło:"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/new_password_label"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:text="AKTUALIZUJ HASŁO"
        android:layout_below="@+id/new_password"
        android:layout_centerHorizontal="true"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="USUŃ KONTO"
        android:layout_below="@+id/btn_edit"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="17sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>